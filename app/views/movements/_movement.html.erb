<div id="<%= dom_id movement %>" class="p-6 rounded-lg shadow-lg  bg-white flex <%= movement.saida? ? 'text-red-700' : 'text-green-700'%> ">
  <div class="ml-2 mt-2">
    <span>
      <%= l movement.date %>
    </span>
  </div>
  <div class="ml-2 mt-2 flex-grow">
    <span>
      <%= movement.description %>
    </span>
  </div>
  <div class="mt-2">
    <span>
      <%= number_to_currency movement.value %>
    </span>
  </div>
<%= button_to 'Deletar', movement, method: :delete, class: "text-white ml-2 rounded-lg py-3 px-5 bg-gray-100 font-medium bg-red-600" %>
</div>
